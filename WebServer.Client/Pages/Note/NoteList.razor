@page "/note"
@inject HttpClient Http
@inject NavigationManager NavigationManger
<h1>note list</h1>


@if (productList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="col-md-2">
        <a href="/note/create">Create Product</a>
    </div>
    @if (productList.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Supplier</th>
                    <th scope="col">Price</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in productList)
                {
                    <tr>
                        <td>
                            <img src="@product.ImageUrl" alt="product image" style="width:100px;" />
                        </td>
                        <td class="align-middle">
                            @product.Name
                        </td>
                        <td class="align-middle">
                            @product.Supplier
                        </td>
                        <td class="align-middle">
                            $@product.Price
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" href="note/detail/@(product.Id.ToString())">Detail</a>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-danger" href="note/delete/@(product.Id.ToString())">Delete</a>
                            <a class="btn btn-warning" href="note/update/@(product.Id.ToString())">update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

       <Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage" />
    }
    else
    {
        <span>
            Loading products...
        </span>
    }
}
