
@if (products != null)
{
<section class="section-content padding-y-sm bg-white">
    <div class="container">
        <header class="section-heading">
            <a href="/product" class="btn btn-outline-primary float-right">더보기</a>
            <h3 class="section-title">신상품</h3>
        </header>

        <div class="row">

            @foreach (var product in products)
            {
                <div class="col-md-3">
                    <div class="card card-product-grid">
                        <a href="/product/detail/@product.Id" class="img-wrap" >
                            <img src="/Temp/Product/@product.ImageUrl"  style="height: 350px; width: 100%; object-fit: cover">
                        </a>
                        <figcaption class="info-wrap">
                            <a href="/product/detail/@product.Id" class="title">
                                @product.Name
                            </a>

                            <div class="price mt-1">$@product.Price</div>
                        </figcaption>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
}