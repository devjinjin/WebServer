@page "/place/create"
@inject HttpClient Http
@inject NavigationManager NavigationManger



<h2>Create place Form</h2>

<EditForm Model="_placeInfo" OnValidSubmit="Create" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="title" class="col-md-2 col-form-label">상점명:</label>
        <div class="col-md-10">
            <InputText id="title" class="form-control" @bind-Value="_placeInfo.Title" />
            <ValidationMessage For="@(() => _placeInfo.Title)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="discription" class="col-md-2 col-form-label">설명:</label>
        <div class="col-md-10">
            <InputText id="discription" class="form-control" @bind-Value="_placeInfo.Discription" />
            <ValidationMessage For="@(() => _placeInfo.Discription)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="address" class="col-md-2 col-form-label">주소:</label>
        <div class="col-md-10">
            <InputText id="address" class="form-control" @bind-Value="_placeInfo.Address" />
            <ValidationMessage For="@(() => _placeInfo.Address)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="tel" class="col-md-2 col-form-label">전화번호:</label>
        <div class="col-md-10">
            <InputText id="tel" class="form-control" @bind-Value="_placeInfo.Tel" />
            <ValidationMessage For="@(() => _placeInfo.Tel)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="homepage" class="col-md-2 col-form-label">홈페이지:</label>
        <div class="col-md-10">
            <InputText id="homepage" class="form-control" @bind-Value="_placeInfo.HomePage" />
            <ValidationMessage For="@(() => _placeInfo.HomePage)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="image" class="col-md-2 col-form-label">Image:</label>
        <div class="col-md-10">
            <PlaceImageUpload OnChange="AssignImageUrl" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
</EditForm>
<PlaceSuccessNotification @ref="_notification" />


